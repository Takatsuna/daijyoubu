    <%= f.label :start %><br>
    <%= f.datetime_select :start %>
  </div>
  <div class="field">
    <%= f.label :end %><br>
    <%= f.datetime_select :end %>
  </div>
  <div class="field">
    <%= f.label :ukeireninzu %><br>
    <%= f.text_field :ukeireninzu %>
  </div>
  <div class="field">
    <%= f.label :jyucyu_id %><br>
